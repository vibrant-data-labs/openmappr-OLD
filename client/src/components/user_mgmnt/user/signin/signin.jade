.page.height-100.vert-align
	.page-signin.width-100(data-ng-controller='LoginCtrl')
		.modal-dialog
			.panel.panel-profile
				.panel-heading(style="padding:0;")
					a.pull-left.profile(href="/")
						img(class="logo" alt="Vibrant Data Logo" src="https://s3-us-west-1.amazonaws.com/vdat-site/vdat_logonew.png" width="390" height="80")
					.clearfix
					h4(style="padding-left: 92px;") {{ui.showPswdResetPanel && 'Reset Password' || 'Sign in to Vibrant Data'}}
				.panel-body
					//- Hiding from UI to restrict free logins
					//- section.text-center
					//- 	a.btn-facebook-round(ng-click='auth.viaOauth("facebook")')
					//- 		i.fa.fa-facebook.fa-2x
					//- 	.space-md-inline
					//- 	a.btn-google-plus-round(ng-click='auth.viaOauth("google")')
					//- 		i.fa.fa-google-plus.fa-2x
					//- span.line-thru OR
					section
						form.form-horizontal(ng-if="!ui.showPswdResetPanel")
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-envelope-o.fa-fw
										input.form-control(ng-model='credentials.email', type='email', placeholder='email', name="email" dir-select-all)
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-key.fa-fw
										input.form-control(ng-model='credentials.password', type='password', placeholder='password', name="password" dir-select-all)
							h5.text-danger.text-center {{message}}
							p.text-center.text-muted.text-small
							.divider
							.text-center
							input.power-btn.width-100.big(type="submit" ng-click='auth.login()', value="Sign in")
							.divider
							.row
								.col-xs-12
									h6.text-center
										button.power-btn.secondary-btn.error-btn(ng-click="ui.showPswdResetPanel = true;") Forgot Password?
						form.form-horizontal(ng-if="ui.showPswdResetPanel")
							.form-group
								.col-sm-12
									.input-group.input-group-lg
										span.input-group-addon
											span.fa.fa-envelope-o.fa-fw
										input.form-control(ng-model='reset.email', type='email', placeholder='email', name="email" dir-select-all)
							p.text-center.text-muted.text-small
							.divider
							input.power-btn.width-100.big(type="submit" ng-click='auth.resetPassword()', value="Reset Password")
							h5.text-danger.text-center {{message}}
					//- Hiding from UI to restrict free signups
					//- section
					//- 	.divider
					//- 	p.text-center.text-muted.text-small
					//- 		| Dont have an account?
					//- 		a(href='#', ng-click='auth.regViaLocal()') Sign up!
			.text-center.text-small
				p Vibrant Data, Inc. All Rights Reserved.
